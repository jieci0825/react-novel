{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@controller/*": ["src/app/controllers/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
